################################################################################
#					Aliases 
################################################################################
if [ -f ./.bash_aliases ]; then
  . ./.bash_aliases
fi

###############################################################################
#				Environment variables 
###############################################################################
if [ -f ./.bash_env_vars ]; then
  . ./.bash_env_vars
fi

######################################################################################
#					Key bindings 
######################################################################################
if [ -f ./key_bindings.sh ]; then
  . ./key_bindings.sh
fi

######################################################################################
#					Bash history config 
######################################################################################
if [ -f ./history_config.sh ]; then
  . ./history_config.sh
fi

######################################################################################
#					SSH agent 
######################################################################################
if [ -f ./ssh-agent.sh ]; then
  . ./ssh-agent.sh
fi

######################################################################################
#					fzf 
######################################################################################
if [ -f /usr/share/doc/fzf/examples/key-bindings.bash ]; then
  . /usr/share/doc/fzf/examples/key-bindings.bash
fi

######################################################################################
#					Node Version Manager
######################################################################################
[ -s "$NVM_PATH/nvm.sh" ] && \. "$NVM_PATH/nvm.sh"  # This loads nvm
[ -s "$NVM_PATH/bash_completion" ] && \. "$NVM_PATH/bash_completion"  # This loads nvm bash_completion

######################################################################################
#					Kubectl
######################################################################################
# Kubectl autocompletion - alias for 'kubectl' is 'k'
if command -v kubectl &> /dev/null; then
    source <(kubectl completion bash)
    complete -F __start_kubectl k
fi

######################################################################################
#					Pyenv
######################################################################################
eval "$(pyenv init - bash)"

######################################################################################
#					Starship prompt shell
######################################################################################
eval "$(starship init bash)"

######################################################################################
#					Start tmux 
######################################################################################
[ -z "$TMUX"  ] && { tmux attach || exec tmux new-session && exit;}